    style.
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        overflow: hidden;
      }

      :root {
        --secondary-color: #151226;
        --contrast-color: #ffdfca;
      }
      .overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        height: 100%;
        z-index: -10;
        background-color: var(--contrast-color);
      }

      .container2 {
        display: flex;
        height: 100vh;
        justify-content: space-around;
        align-items: center;
        color: #fff;
        animation: expand 3s ease forwards;
        background-color: var(--secondary-color);
        position: relative;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        transition: all .8s ease;
      }

      .container_content {
       width: 50%;
       overflow-y: hidden;
       margin-left: 90px;
       margin-top : 80px;
      }

      .container_content_inner {
        width: 80%;
        margin-left: 120px;
        overflow-y: hidden;
      }

      .container_outer_img {
        margin: 50px;
        width: 50%;
        overflow: hidden;
      }

      .container_img {
        width: 100%;
        animation: slideIn 2s ease-in-out forwards;
      }

      .par {
        height: auto;
      }

      p .trn{
        line-height: 28px;
        transform: translateY(300px);
        animation: slideUp 3s ease-in-out forwards .8s;
      }

      .btns {
        height: 100%;
        position: relative;
        width: 150px;
      }

      .btns_more {
        background: #ffdfca;
        border: 1px solid var(--contrast-color);
        border-radius: 50px;
        padding: 8px 12px;
        color: #BF307F;
        font-size: 16px;
        text-transform: uppercase;
        position: relative;
        margin-top: 15px;
        outline: none;
        transform: translateY(50px);
        animation: slideUp .8s ease-in-out  forwards 1s;
      }

      .title {
        overflow-x: hidden;
        overflow-y: hidden;
        height: auto;
      }

      h1 {
          font-size: 40px;
          color: var(--contrast-color);
          margin-bottom: 20px;
          transform: translateY(100px);
          animation: slideUp .8s ease forwards .5s;
      }

      @keyframes slideIn {
        0% {
          transform: translateX(500px) scale(.2);
        }
        100% {
          transform: translateX(0px) scale(1);
        }
      }

      @keyframes slideUp {
        0% {
          transform: translateY(300px);
        }
        100% {
          transform: translateY(0px);
        }
      }

      @keyframes expand {
        0% {
          transform: translateX(1400px);
        }
        100% {
          transform: translateX(0px);
        }
      }

      h1.tcolor{
        color: #5C6178;
      }



